{
  "name": "moltbot-sandbox",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "description": "Run Moltbot personal AI assistant in a Cloudflare Sandbox",
  "scripts": {
    "build": "vite build",
    "deploy": "npm run build && wrangler deploy",
    "dev": "vite dev",
    "start": "wrangler dev --env-file .dev.vars -e DEV_MODE=true",
    "types": "wrangler types",
    "typecheck": "tsc --noEmit",
    "lint": "oxlint src/",
    "lint:fix": "oxlint --fix src/",
    "format": "oxfmt --write src/",
    "format:check": "oxfmt --check src/",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "speckit:add": "nix-shell -p uv --command \"uvx --from git+https://github.com/github/spec-kit.git specify init --here --ai opencode --force --script sh --ai-skills\""
  },
  "dependencies": {
    "@cloudflare/puppeteer": "^1.0.6",
    "hono": "^4.12.3",
    "jose": "^6.1.3",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "wrangler": "^4.69.0"
  },
  "devDependencies": {
    "@cloudflare/sandbox": "^0.7.8",
    "@cloudflare/vite-plugin": "^1.25.6",
    "@cloudflare/workers-types": "^4.20260301.1",
    "@swc/core": "^1.15.18",
    "@types/node": "^22.19.13",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitest/coverage-v8": "^4.0.18",
    "jsdom": "^28.1.0",
    "oxfmt": "^0.28.0",
    "oxlint": "^1.50.0",
    "typescript": "^5.9.3",
    "unplugin-swc": "^1.5.9",
    "vite": "^6.4.1",
    "vitest": "^4.0.18"
  },
  "author": "",
  "license": "Apache-2.0",
  "cloudflare": {
    "bindings": {
      "ANTHROPIC_API_KEY": {
        "description": "Your [Anthropic API key](https://console.anthropic.com/)."
      },
      "MOLTBOT_GATEWAY_TOKEN": {
        "description": "Token for gateway access. Generate with: openssl rand -hex 32"
      }
    }
  }
}
