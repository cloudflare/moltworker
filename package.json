{
  "name": "moltbot-sandbox",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "description": "Run Moltbot personal AI assistant in a Cloudflare Sandbox",
  "packageManager": "bun@1.1.33",
  "engines": {
    "bun": ">=1.1.0"
  },
  "bin": {
    "skclaw": "scripts/skclaw.ts"
  },
  "scripts": {
    "build": "bunx vite build",
    "deploy": "bun run build && bunx wrangler deploy",
    "skclaw": "bun scripts/skclaw.ts",
    "dev": "bunx vite dev",
    "start": "bunx wrangler dev",
    "types": "bunx wrangler types",
    "typecheck": "bunx tsc --noEmit",
    "lint": "bunx eslint .",
    "lint:fix": "bunx eslint . --fix",
    "format": "bunx prettier --write .",
    "format:check": "bunx prettier --check .",
    "test": "bunx vitest run",
    "test:watch": "bunx vitest",
    "test:coverage": "bunx vitest run --coverage",
    "test:cli": "bun test test/cli"
  },
  "dependencies": {
    "@cloudflare/puppeteer": "^1.0.6",
    "hono": "^4.11.9",
    "jose": "^6.1.3",
    "react": "^19.2.4",
    "react-dom": "^19.2.4"
  },
  "devDependencies": {
    "@cloudflare/sandbox": "^0.7.1",
    "@cloudflare/vite-plugin": "^1.24.0",
    "@cloudflare/workers-types": "^4.20260210.0",
    "@eslint/js": "^10.0.1",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@types/node": "^22.19.10",
    "@types/react": "^19.2.13",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.55.0",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitest/coverage-v8": "^4.0.18",
    "bun-types": "^1.1.33",
    "dotenv": "^17.2.4",
    "eslint": "^10.0.0",
    "gray-matter": "^4.0.3",
    "prettier": "^3.8.1",
    "stripe": "^20.3.1",
    "typescript": "^5.9.3",
    "vite": "^6.4.1",
    "vitest": "^4.0.18",
    "wrangler": "^4.64.0",
    "zod": "^3.25.76"
  },
  "author": "",
  "license": "Apache-2.0",
  "cloudflare": {
    "bindings": {
      "ANTHROPIC_API_KEY": {
        "description": "Your [Anthropic API key](https://console.anthropic.com/)."
      },
      "MOLTBOT_GATEWAY_TOKEN": {
        "description": "Token for gateway access. Generate with: openssl rand -hex 32"
      }
    }
  }
}
