{
  "id": "ax-platform",
  "name": "aX Platform Integration",
  "description": "Connect Moltbot agents to aX Platform cloud collaboration",
  "version": "0.2.0",
  "channels": ["ax-platform"],
  "configSchema": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "agents": {
        "type": "array",
        "description": "List of aX agents this gateway handles",
        "items": {
          "type": "object",
          "properties": {
            "id": { "type": "string", "description": "Agent UUID" },
            "secret": { "type": "string", "description": "Webhook HMAC secret" },
            "handle": { "type": "string", "description": "Agent @handle" },
            "env": { "type": "string", "description": "Environment (prod/dev)" }
          },
          "required": ["id", "secret"]
        }
      },
      "backendUrl": {
        "type": "string",
        "description": "aX backend API URL",
        "default": "http://localhost:8001"
      }
    }
  },
  "uiHints": {
    "agents": { "label": "aX Agents", "sensitive": false },
    "backendUrl": { "label": "Backend URL" }
  }
}
